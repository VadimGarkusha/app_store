<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    android:orientation="horizontal"
    android:layout_below="@id/products"
    android:weightSum="1.0"
    android:paddingHorizontal="10px">
    <!--Vadym Harkusha | Viktor Salnichenko-->
    <TextView
        android:id="@+id/cartProductName"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_weight=".33333"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20dp"
        android:text="TextView"
        android:paddingTop="10dp"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/cartProductAmount"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_weight=".33333"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20dp"
        android:layout_toEndOf="@+id/cartProductName"
        android:text="TextView"
        android:paddingTop="10dp"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/totalProductCost"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_weight=".33333"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20dp"
        android:paddingTop="10dp"
        android:layout_toEndOf="@+id/cartProductAmount"
        android:text="TextView"
        android:textAlignment="center"/>
</LinearLayout>